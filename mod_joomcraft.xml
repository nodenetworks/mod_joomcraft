<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="4" client="site" method="upgrade">
    <name>mod_joomcraft</name>
    <creationDate>[DATE]</creationDate>
    <author>Micha≈Ç Ostrykiewicz</author>
    <creationDate>2024-07-11</creationDate>
    <authorEmail>[AUTHOR_EMAIL]</authorEmail>
    <authorUrl>[AUTHOR_URL]</authorUrl>
    <copyright>[COPYRIGHT]</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <version>1.0.0</version>
    <description>MOD_JOOMCRAFT_XML_DESCRIPTION</description>
    <media destination="mod_joomcraft">
        <folder>images</folder>
    </media>
    <files>
        <filename module="mod_joomcraft">mod_joomcraft.php</filename>
        <folder>src</folder>
        <folder>tmpl</folder>
        <folder>assets</folder>
        <folder>media/mod_joomcraft</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="server_name" type="text" label="Server Name" description="The Minecraft server name" default="mc.eircraft.net" />
                <field name="server_port" type="text" label="Server Port" description="The Minecraft server port" default="25565" />
                <field name="online_image" type="list" label="Online Image" description="Select the image to display when the server is online">
                    <option value="online.png">Online (Default)</option>
                    <option value="custom_image.png">Custom Image</option>
                </field>
                <field name="offline_image" type="list" label="Offline Image" description="Select the image to display when the server is offline">
                    <option value="offline.png">Offline (Default)</option>
                    <option value="custom_image.png">Custom Image</option>
                </field>
            </fieldset>
            <fieldset name="advanced">
                <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" class="custom-select" />
                <field name="moduleclass_sfx" type="textarea" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" rows="3" />
                <field name="cache" type="list" label="COM_MODULES_FIELD_CACHING_LABEL" default="0">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field name="cache_time" type="number" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" default="0" />
                <field name="cachemode" type="hidden" default="itemid">
                    <option value="itemid"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
